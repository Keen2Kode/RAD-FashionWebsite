<%# needs a window like header %>

<h1>Collections for <%= @collection %>: <%= @items.size%> </h1>
<%= link_to "Filters", filter_collections_path %>


<div class="container">

      <% @items.each do |item| %>       
        <div class="col-xs-6">
          <div class="well" style="background-image:url('<%= item.image_link %>'); background-repeat: no-repeat; background-size: cover; background-position: center;"></div>
          <div>
            <%= item.name %>
            $<%= item.price %>
            <%= item.collections %>
            <%= link_to 'Show', item %>
          </div>
        </div>
      <% end %>

</div>
















