<% if model.errors.any? %>
    <div id="error_messages">
        <div class="alert alert-danger">
            The form contains <%= pluralize(model.errors.count, "error") %>.
        </div>
        <ul>
            <% model.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    </div>
<% end %>
