<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_with(model: user, url: path, local: true) do |f| %>
            <%= render 'shared/errors', model: user %>
            <%= f.label :email %>
            <%= f.text_field :email, class: 'form-control' %>
            <%= f.label :password %>
            <%= f.password_field :password, class: 'form-control' %>
            <%= f.submit params[:action].capitalize, class: "btn btn-primary" %>
        <% end %>
        <%= button_to "Login with Twitter", "/auth/twitter", method: :post, class: "btn btn-primary" %>
    </div>
</div>